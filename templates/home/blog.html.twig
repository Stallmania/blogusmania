{% extends 'base.html.twig' %}

{% block title %}Les blogs{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            {% for article in les_articles %}
                <div class="col-md-4">
                    <div class="card col-md-6" style="width: 18rem;" >
                        <h3 class="card-title">{{article.category.title}}</h3>
                        <img src="{{article.image}}" class="card-img-top" alt="image">
                        <div class="card-body">
                            <h5 class="card-title">{{article.title | raw}}</h5>
                            <h6 class="card-title">{{article.createdAt | date('d/m/y H:i')}}</h6>
                            <p class="card-text">{{article.content | raw}}</p>
                            <a href="{{path('blog_by_id',{'id':article.id})}}" class="btn btn-primary">detail</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

