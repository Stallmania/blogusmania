{% extends 'base.html.twig' %}

{% block title %}blog{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card col-md-6" style="width: 18rem;" >
                    <h2 class="card-title">cat√©gorie : {{article.category.title | raw}}</h2>
                    <h5 class="card-title">{{article.title | raw}}</h5>
                    <h6 class="card-title">{{article.createdAt | date('d/m/y H:i')}}</h6>
                    <img src="{{article.image}}" class="card-img-top" alt="image">
                    <div class="card-body">
                        <p class="card-text">{{article.content | raw}}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                {% for comment in article.comments %}
                
                <h3>{{comment.author | raw}}</h3><small>{{comment.createdAt | date('d/m/y H:i')}}</small>
                <p>{{comment.content | raw}}</p>

                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
