{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="container">
    <h1>Inscription</h1>
    {{ form_start(form) }}
    {{ form_row(form.username,{'label':'Nom utilisateur','attr':{'placeholder':'nom'}}) }}
    {{ form_row(form.email,{'label':'email','attr':{'placeholder':'email'}}) }}
    {{ form_row(form.password,{'label':'mot de passe','attr':{'placeholder':'mot de passe'}}) }}
    {{ form_row(form.confirme_password,{'label':'Confirmation','attr':{'placeholder':'confirmer le mot de passe'}}) }}
    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
</section>
{% endblock %}
